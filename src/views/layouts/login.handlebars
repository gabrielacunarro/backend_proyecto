<main>
    <div id="alertContainer" class="w-50 m-auto my-5"></div>
    <h1>Login</h1>
    <form id="loginForm" method="post" class="w-50 m-auto">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button id="login" type="submit" class="w-100 btn btn-primary">Login</button>
        <div class="row mt-3">
            <div class="col">
                <button id="google" type="button" class="w-100 btn btn-danger"><i class="fab fa-google"></i></button>
                <button id="github" type="button" class="w-100 btn btn-danger"><i class="fab fa-github"></i></button>
            </div>
        </div>
        <button id="showResetPasswordForm" type="button" class="w-100 btn btn-link mt-3">Reset Password</button>
    </form>
    <form id="resetPasswordForm" method="post" class="w-50 m-auto" style="display: none;">
        <div class="mb-3">
            <label for="resetEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="resetEmail" name="email" required>
        </div>
        <div class="mb-3">
            <label for="currentPassword" class="form-label">Current Password</label>
            <input type="password" class="form-control" id="currentPassword" name="password" required>
        </div>
        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
        </div>
        <button id="resetPassword" type="submit" class="w-100 btn btn-primary">Reset Password</button>
        <button id="showLoginForm" type="button" class="w-100 btn btn-link mt-3">Back to Login</button>
    </form>
</main>

<script src="../../scripts/login.js"></script>

<main>
    <div id="alertContainer" class="w-50 m-auto my-5"></div>
    <h1>Login</h1>
    <form method="post" class="w-50 m-auto">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button id="login" type="submit" class="w-100 btn btn-primary">Login</button>

        <div class="row mt-3">
            <div class="col">
                <button id="google" type="submit" class="w-100 btn btn-danger"><i class="fab fa-google"></i></button>
                <button id="github" type="submit" class="w-100 btn btn-danger"><i class="fab fa-github"></i></button>
            </div>

        </div>
    </form>
</main>

<script src="/scripts/login.js"></script>
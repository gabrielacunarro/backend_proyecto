<main>
    <h1>Orders</h1>
    <div class="order-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Quantity</th>
                    <th>Product</th>
                    <th>Thumbnail</th>
                    <th>Price</th>
                    <th>State</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="orders-body">
                {{#each response.docs}}
                <tr data-id="{{_id}}">
                    <td>{{quantity}}</td>
                    <td>{{pid.title}}</td>
                    <td class="thumbnail-container">
                        <img src="{{pid.photo}}" alt="Product Thumbnail" class="product-thumbnail">
                    </td>
                    <td>{{formatPrice pid.price}}</td>
                    <td>{{state}}</td>
                    <td><span class="delete-btn" data-id="{{_id}}">&times;</span></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</main>
<script src="../../scripts/orders.js"></script>

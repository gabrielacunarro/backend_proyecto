<main class="flex-grow-1 w-100 d-flex flex-column">
    <section id="product-details" class="mt-4">
        <div class="product-details-container">
            <img src="{{ product.photo }}" class="product-details-img" alt="{{ product.title }}" />
            <h5 class="p-2 text-center product-details-title">{{ product.title }}</h5>
            <p class="p-2 text-center product-details-description" style="font-size: 14px; margin-top: 0;">
                {{ product.description }}
            </p>
            <p class="p-2 text-center product-details-price">Precio: ${{ product.price }}</p>
            <p class="p-2 text-center product-details-stock">Stock: {{ product.stock }}</p>
            <button class="addToCart">Add to cart</button>
        </div>
    </section>
</main>
<script src="../../scripts/index.js"></script>
<script src="../../scripts/detail.js"></script>
